{% extends "layouts/default.twig" %}

{% block content %}
    {{ user }}
    <div class="container">
        <div class="main-body" style="margin-top: 5vh;">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="assets/images/no-user.jpg" alt="Admin" class="rounded-circle p-1"
                                     style="background: #444c56;" width="100">
                                <div class="mt-3">
                                    <h4>John Doe</h4>
                                </div>
                            </div>
                            <hr class="my-4">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item d-flex align-items-center flex-wrap">
                                    <h6 class="mb-0" style="margin-right: 12px; display: flex; font-size: 20px;">
                                        <i class="far fa-envelope"></i>
                                    </h6>
                                    <span class="text-secondary" style="font-size: 13px;">toto@gmail.com</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-sm-3 col-center">
                                    <h6 class="mb-0" style="font-size: 14px;">Firstname</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="John">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3 col-center">
                                    <h6 class="mb-0" style="font-size: 14px;">Lastname</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="Doe">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3 col-center">
                                    <h6 class="mb-0" style="font-size: 14px;">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="text" class="form-control" value="john@example.com">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-sm-3 col-center">
                                    <h6 class="mb-0" style="font-size: 14px;">Password</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="password" class="form-control">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary" style="justify-content: flex-end; display: flex;">
                                    <input type="button" class="btn btn-primary px-4" value="Save Changes">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
