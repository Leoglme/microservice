{% extends "layouts/anonymous.twig" %}
{% block content %}
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('assets/images/hero.jpg');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>Quila</strong></h3>
                        <p class="mb-4">Login to access the chat application</p>
                        <form action="/login" method="post">
                            <div class="form-group first">
                                <label for="email">{{ flash.errors.email }}</label>
                                <input type="text" value="{{ old.email }}" name="email" class="form-control{% if flash.errors.password %} is-invalid {% endif %}"
                                       placeholder="your-email@gmail.com" id="email">
                                {% if flash.errors.email %}
                                    <span class="invalid-feedback">{{ flash.errors.email }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group last mb-3">
                                <label for="password">Password</label>
                                <input name="password" value="{{ old.password }}" type="password" class="form-control{% if flash.errors.password %} is-invalid {% endif %}" placeholder="Your Password"
                                       id="password">
                                {% if flash.errors.password %}
                                    <span class="invalid-feedback">{{ flash.errors.password }}</span>
                                {% endif %}
                            </div>

                            <div class="d-flex mb-5 align-items-center" style="justify-content: space-between">
                                <label class="control control--checkbox mb-0"><span class="caption">Remember me</span>
                                    <input type="checkbox" checked="checked"/>
                                    <div class="control__indicator"></div>
                                </label>
                                <a href="/register">Register</a>
                            </div>

                            <input style="width: 100%;" type="submit" value="Log In" class="btn btn-block btn-primary">

                        </form>
                        {{ include('components/alertSuccess.twig') }}
                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
